{% extends 'layouts/public_layout.html.twig' %}

{% block title %}Liste des Collectes{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4"><i class="bi bi-calendar-event"></i> Liste des Collectes</h1>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtres de recherche</h5>
        </div>
        <div class="card-body">
            <form method="GET" action="{{ path('app_collectes_liste') }}" class="row g-3">
                <div class="col-md-3">
                    <label for="lieu" class="form-label">Lieu</label>
                    <select name="lieu" id="lieu" class="form-select">
                        <option value="">-- Tous les lieux --</option>
                        {% for lieu in lieux %}
                            <option value="{{ lieu.id }}" {{ lieu.id == lieuFiltreId ? 'selected' : '' }}>
                                {{ lieu.nomLieu }} ({{ lieu.ville }})
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="ville" class="form-label">Ville</label>
                    <input type="text" name="ville" id="ville" class="form-control" 
                           value="{{ villeFiltre }}" placeholder="Rechercher par ville">
                </div>
                <div class="col-md-3">
                    <label for="date_debut" class="form-label">Date de début</label>
                    <input type="date" name="date_debut" id="date_debut" class="form-control" 
                           value="{{ dateDebutFiltre }}">
                </div>
                <div class="col-md-3">
                    <label for="date_fin" class="form-label">Date de fin</label>
                    <input type="date" name="date_fin" id="date_fin" class="form-control" 
                           value="{{ dateFinFiltre }}">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                    <a href="{{ path('app_collectes_liste') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des Collectes -->
    <div class="row">
        {% for collecte in collectes %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">{{ collecte.nom }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong><i class="bi bi-geo-alt-fill"></i> Lieu:</strong><br>
                            <span class="ms-3">{{ collecte.lieu.nomLieu }}</span><br>
                            <small class="text-muted ms-3">
                                {{ collecte.lieu.adresse }}<br>
                                {{ collecte.lieu.ville }} {{ collecte.lieu.codePostal }}
                            </small>
                        </p>
                        <hr>
                        <p class="card-text">
                            <strong><i class="bi bi-calendar-range"></i> Période:</strong><br>
                            <small class="ms-3">
                                <strong>Début:</strong> {{ collecte.dateDebut|date('d/m/Y à H:i') }}<br>
                                <strong>Fin:</strong> {{ collecte.dateFin|date('d/m/Y à H:i') }}
                            </small>
                        </p>
                        <p class="card-text">
                            <strong><i class="bi bi-people-fill"></i> Capacité:</strong> 
                            <span class="badge bg-info">{{ collecte.capaciteMaximale }} personnes</span>
                        </p>
                        <span class="badge bg-{{ collecte.statut == 'Planifiée' ? 'primary' : 'secondary' }}">
                            {{ collecte.statut }}
                        </span>
                    </div>
                    <div class="card-footer bg-transparent">
                        {% if is_granted('ROLE_DONATEUR') %}
                            <a href="{{ path('app_donateur_rdv_new', {'collecteId': collecte.id}) }}" 
                               class="btn btn-success w-100">
                                <i class="bi bi-calendar-check"></i> Prendre Rendez-vous
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-primary w-100">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter pour réserver
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Aucune collecte trouvée avec ces critères.
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_Acceuil') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à l'accueil
        </a>
    </div>
</div>
{% endblock content %}
