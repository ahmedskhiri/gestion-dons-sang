{# templates/donateur/historique.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Historique de mes Dons{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Mon Historique de Dons</h1>
    <hr>

    {% if dons is empty %}
        <div class="alert alert-info">
            Vous n'avez pas encore effectué de don enregistré.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Date du Don</th>
                        <th>Type de Don</th>
                        <th>Quantité (ml)</th>
                        <th>Apte</th>
                        <th>Commentaire</th>
                    </tr>
                </thead>
                <tbody>
                    {% for don in dons %}
                        <tr>
                            <td>{{ don.dateDon|date('d/m/Y') }}</td>
                            <td>{{ don.typeDon }}</td>
                            <td>{{ don.quantite }}</td>
                            <td>
                                {% if don.apte %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-danger">Non</span>
                                {% endif %}
                            </td>
                            <td>{{ don.commentaire|default('N/A') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <p class="mt-4">
        <a href="{{ path('app_donateur_dashboard') }}" class="btn btn-primary">&larr; Retour au Tableau de Bord</a>
    </p>
</div>
{% endblock %}