{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Stocks{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Gestion des Stocks</h1>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Groupe Sanguin</th>
                    <th>Niveau Actuel</th>
                    <th>Niveau d'Alerte</th>
                    <th>Statut</th>
                    <th>Dernière Mise à Jour</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for stock in stocks %}
                    {% set pourcentage = (stock.niveauActuel / stock.niveauAlerte) * 100 %}
                    {% set isCritical = stock.niveauActuel < stock.niveauAlerte %}
                    {% set progressColor = isCritical ? 'danger' : (pourcentage < 150 ? 'warning' : 'success') %}
                    <tr>
                        <td><strong>{{ stock.groupeSanguin }}</strong></td>
                        <td>{{ stock.niveauActuel }} ml</td>
                        <td>{{ stock.niveauAlerte }} ml</td>
                        <td>
                            {% if isCritical %}
                                <span class="badge bg-danger">Critique</span>
                            {% elseif pourcentage < 150 %}
                                <span class="badge bg-warning">Attention</span>
                            {% else %}
                                <span class="badge bg-success">Normal</span>
                            {% endif %}
                        </td>
                        <td>{{ stock.derniereMiseAJour ? stock.derniereMiseAJour|date('d/m/Y H:i') : 'N/A' }}</td>
                        <td>
                            <form method="post" action="{{ path('app_admin_stock_update', {'id': stock.id}) }}" class="d-inline">
                                <div class="input-group" style="width: 200px;">
                                    <input type="number" name="niveauActuel" class="form-control form-control-sm" 
                                           value="{{ stock.niveauActuel }}" min="0" required>
                                    <button type="submit" class="btn btn-sm btn-primary">Mettre à jour</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <div class="mb-2">
                                <small class="text-muted">Réserves: {{ stock.niveauActuel }} / {{ stock.niveauAlerte }} ml</small>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-{{ progressColor }}" role="progressbar" 
                                     style="width: {{ pourcentage > 100 ? 100 : pourcentage }}%" 
                                     aria-valuenow="{{ stock.niveauActuel }}" 
                                     aria-valuemin="0" 
                                     aria-valuemax="{{ stock.niveauAlerte }}">
                                    {{ pourcentage|number_format(1) }}%
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun stock trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

