{% extends 'layouts/dashboard_layout.html.twig' %}

{% block title %}Nouvelle Collecte{% endblock %}

{% block page_title %}
    <i class="bi bi-plus-circle"></i> Nouvelle Collecte
{% endblock %}

{% block dashboard_content %}
<div class="d-flex justify-content-end mb-3">
    <a href="{{ path('app_admin_collecte_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour à la liste
    </a>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.dateDebut) }}
            {{ form_row(form.dateFin) }}
            {{ form_row(form.capaciteMaximale) }}
            {{ form_row(form.statut) }}
            {{ form_row(form.lieu) }}
            <button type="submit" class="btn btn-primary">Créer</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock dashboard_content %}

