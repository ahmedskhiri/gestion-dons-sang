{% extends 'admin/base.html.twig' %}

{% block title %}Validation des Dons{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Validation des Dons</h1>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

<div class="card">
    <div class="card-header">
        <h5>Rendez-vous à valider (Statut: Effectué, sans Don associé)</h5>
    </div>
    <div class="card-body">
        {% if rdvAValider|length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Donateur</th>
                        <th>Email</th>
                        <th>Collecte</th>
                        <th>Date/Heure</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for rdv in rdvAValider %}
                        <tr>
                            <td>{{ rdv.id }}</td>
                            <td>{{ rdv.donateur.nom }} {{ rdv.donateur.prenom }}</td>
                            <td>{{ rdv.donateur.email }}</td>
                            <td>{{ rdv.collecte.nom }}</td>
                            <td>{{ rdv.dateHeureDebut|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ path('app_admin_don_valider_form', {'id': rdv.id}) }}" class="btn btn-sm btn-success">
                                    Valider le Don
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">
                <p class="mb-0">Aucun rendez-vous à valider pour le moment.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

